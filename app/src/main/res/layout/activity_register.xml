<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f3f5f7"
    tools:context="com.example.alimama.alimama.ui.activity.RegisterActivity">

    <include layout="@layout/register_toolbar"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="50dp"
            android:background="#F5F5F5">

            <ImageButton
                android:id="@+id/btn_user_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/register_img"
                android:background="@null"
                android:layout_marginBottom="5dp"/>

            <EditText
                android:id="@+id/register_edt_username"
                android:layout_width="300dp"
                android:layout_height="60dp"
               android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/register_background"
                android:gravity="center"
                android:hint="Student ID"
                android:inputType="text"
                android:paddingLeft="8dp"
                android:textSize="20sp"

                />
            <EditText
                android:id="@+id/register_edt_password"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:background="@drawable/register_background"
                android:inputType="textWebPassword"
                android:hint="Password"
                android:paddingLeft="8dp"
                android:textSize="20sp"
                android:gravity="center"
                />
            <EditText
                android:id="@+id/register_edt_repassword"
                android:layout_width="300dp"
                android:layout_height="60dp"
               android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:background="@drawable/register_background"
                android:inputType="textWebPassword"
                android:hint="Repassword"
                android:paddingLeft="8dp"
                android:textSize="20sp"
                android:gravity="center"
                />
            <EditText
            android:id="@+id/register_phone"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
            android:layout_marginTop="4dp"
                android:background="@drawable/register_background"
            android:inputType="phone"
            android:hint="Phone Number"
            android:paddingLeft="8dp"
            android:textSize="20sp"
            android:gravity="center"
            />
            <EditText
                android:id="@+id/register_address"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/register_background"
                android:inputType="text"
                android:hint="Address"
                android:paddingLeft="8dp"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_gravity="center"
                />

            <Button
                android:id="@+id/btn_register"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:layout_gravity="center"
                android:textAllCaps="false"
                android:text="Register"
                android:textColor="#696969"
                android:textSize="25sp"
                android:background="#f4f5f7"
                android:gravity="center" />

        </LinearLayout>

    </ScrollView>


</LinearLayout>


