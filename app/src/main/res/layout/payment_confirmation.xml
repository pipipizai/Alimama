<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_toolbar"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/payment1_image"
            android:layout_width="200dp"
            android:layout_height="133dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/favorite_item1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/payment1_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MacBook Pro"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/payment1_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14-inch, Early 2018"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/payment1_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="RM 7000.00"
                android:textColor="#DC143C"
                android:textSize="25dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/payment2_image"
            android:layout_width="200dp"
            android:layout_height="133dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/favorite_item2" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/payment2_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alienware 17"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/payment2_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="17-inch, GTX-1080"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/payment2_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="RM 9999.99"
                android:textColor="#DC143C"
                android:textSize="25dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:height="100dp"
        android:gravity="bottom"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#d8dde1"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:textSize="25dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#000000"
                android:text="Total:"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:textSize="25dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#DC143C"
                android:text="RM 16999.99"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:background="#FFA500"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:text="PAY"
                        android:textSize="25dp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#d8dde1"></View>
    </LinearLayout>

</LinearLayout>