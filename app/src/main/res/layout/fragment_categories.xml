<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.CategoriesFragment"
    android:orientation="vertical">

    <!-- header  -->
    <RelativeLayout
        android:id="@+id/layout_categories_header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:background="#efb336">

        <TextView
            android:id="@+id/categories_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Categories"
            android:textColor="#ffffff"
            android:textSize="30sp" />
    </RelativeLayout>

    <!-- ListView -->




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/catrgories_menu_list"
            android:layout_width="149dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/layout_categories_header"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="60dp"
            android:layout_weight="1">

        </android.support.v7.widget.RecyclerView>


