<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:id="@+id/cart_list">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/shopping_history_item_image"
            android:layout_width="200dp"
            android:layout_height="133dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="#ffffff"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            >

            <TextView
                android:id="@+id/shopping_history_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MacBook Pro"
                android:textSize="20dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/shopping_history_item_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14-inch, Early 2018"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/shopping_history_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="RM 7000.00"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="#DC143C"/>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>