<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_toolbar"></include>

    <ScrollView
        android:id="@+id/layout_published"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        //我也不知道是不是只要写这个调用就可以了
        //所以我就把这个调用放在这里了 然后把之前的放到这里加了comment button
        //button id 已经加了 有需要就自己改
        //要用这个调用的话 ctrl+shift+/ 顺便删除我下面代码即可
        <!--<android.support.v7.widget.RecyclerView
            android:id="@+id/cart_items"
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="0dp"
            >

        </android.support.v7.widget.RecyclerView>-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_publish1"
                    android:layout_width="200dp"
                    android:layout_height="133dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/favorite_item1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_publish_info11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MacBook Pro"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_publish_info12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="14-inch, Early 2018"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/txt_publish_info13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="RM 7000.00"
                        android:textColor="#DC143C"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                    //修改第一个物品的物品信息和下架物品 id我随便写的
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btn_publish11_comment"
                            android:layout_width="70dp"
                            android:layout_height="40dp"
                            android:text="Edit" />

                        <Button
                            android:id="@+id/btn_publish12_comment"
                            android:layout_width="70dp"
                            android:layout_height="40dp"
                            android:text="Delete" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#d8dde1"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_record2"
                    android:layout_width="200dp"
                    android:layout_height="133dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/favorite_item2" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_record_info21"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alienware 17"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_record_info22"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="17-inch, GTX-1080"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/txt_record_info23"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="RM 9999.99"
                        android:textColor="#DC143C"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                    //给第二个已购买物品添加评论 id我也是随便写的

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btn_publish21_comment"
                            android:layout_width="70dp"
                            android:layout_height="40dp"
                            android:text="Edit" />

                        <Button
                            android:id="@+id/btn_publish22_comment"
                            android:layout_width="70dp"
                            android:layout_height="40dp"
                            android:text="Delete" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#d8dde1"></View>

        </LinearLayout>

    </ScrollView>

</LinearLayout>